{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@renderer/components/*": ["src/renderer/components/*"],
      "@renderer/effects/*": ["src/renderer/effects/*"],
      "@renderer/stores/*": ["src/renderer/stores/*"],
      "@renderer/views/*": ["src/renderer/views/*"],
      "*": ["node_modules/*"]      
    },
    "jsx": "react",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*"]
}
